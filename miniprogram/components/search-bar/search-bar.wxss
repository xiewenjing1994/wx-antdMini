/* app.wxss 或对应的样式文件 */
.search-container {
    padding: 10px;
    background-color: #f5f5f5; /* 背景颜色 */
    display: flex;
    justify-content: center;
}

.search-bar {
    display: flex;
    align-items: center;
    width: 90%; /* 搜索框宽度 */
    background-color: #fff; /* 搜索框背景 */
    border-radius: 10px; /* 圆角 */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* 阴影效果 */
    padding: 10px; /* 内边距 */
}

.search-input {
    flex: 1;
    height: 100%;
    border: none;
    background-color: transparent;
    font-size: 14px;
    color: #333;
    padding: 0 10px; /* 输入框内边距 */
}
